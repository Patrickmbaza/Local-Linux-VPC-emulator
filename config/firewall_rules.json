{
  "subnets": {
    "public": {
      "ingress": [
        {"port": 80, "protocol": "tcp", "action": "allow", "description": "HTTP access"},
        {"port": 443, "protocol": "tcp", "action": "allow", "description": "HTTPS access"},
        {"port": 22, "protocol": "tcp", "action": "deny", "description": "SSH blocked"}
      ],
      "egress": [
        {"port": "all", "protocol": "all", "action": "allow", "description": "Allow all outbound"}
      ]
    },
    "private": {
      "ingress": [
        {"port": 22, "protocol": "tcp", "action": "allow", "source": "10.0.0.0/16", "description": "SSH from VPC"},
        {"port": 80, "protocol": "tcp", "action": "allow", "source": "10.0.0.0/16", "description": "HTTP from VPC"}
      ],
      "egress": [
        {"port": "all", "protocol": "all", "action": "allow", "description": "Allow all outbound"}
      ]
    }
  }
}
